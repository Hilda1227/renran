/**app.wxss**/
page{
  height: 100%;
}
.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  color: #405368;
  position: relative;
} 

/* 覆盖默认样式 */
button {
  border: none;
  padding: 0;
  margin: 0;
  background: transparent;
}
button::after {
  border: none;
}
input {
  outline: none;
  border: none;
  list-style: none;
}


