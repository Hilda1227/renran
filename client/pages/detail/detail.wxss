.container{
    display: block;
}
swiper{
    height: 100%;
}
swiper-item{
    display: block;
    height: 100%;
    background: #F2F5F8;
  }
.wrap{
    flex-grow: 1;
    margin: 56rpx 36rpx 100rpx 36rpx;
    width: 680rpx;
    display: flex;
    flex-shrink: 0;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
    background: white;
}
.wrap image{
    width: 444rpx;
    height: 444rpx;
    margin-top: 80rpx;
    border-radius: 50%;
}
.wrap .name{
    font-size:20px;
    color: #405368;
    margin-top: 60rpx;
}
.wrap .days{
    color: #9B9B9B;
    font-size: 20px;
    margin-top: 12rpx;
}
.wrap .days .num{
    color: #405368;
    font-size: 64px;
    font-weight: bold;
}
.wrap .date{
    font-size: 18px;
    color: #C6CCD2;
    margin-top: 20rpx;
}
.wrap .share{
    width: 62rpx;
    height: 52rpx;
    margin: 44rpx auto;
}

