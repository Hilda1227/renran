/**index.wxss**/
.container {
  background:#FAFAFA;
}

.logo {
  width: 354rpx;
  height: 354rpx;
  border-radius: 50%;
  margin-top: 170rpx;
  animation: logo 1s ease forwards 0s;
}

.slogan{
  font-size: 40rpx;
  margin-bottom: 0;
  opacity: 0;
  animation: slogan 1s ease forwards 1s;
}

@keyframes logo {
  0% {
    transform: scale(0);
  }
  100% {
    transform: scale(1)
  }
}

@keyframes slogan {
  0% {
    transform: translateY(0); 
  }
  100% {
    opacity: 1;
    transform: translateY(-480rpx);
  }
}

 
